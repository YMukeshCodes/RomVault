{
  "version": 2,
  "outputDirectory": "dist/public",
  "functions": {
    "api/**/*.ts": {
      "includeFiles": "data/**,api/storage.ts"
    }
  },
  "rewrites": [
    {
      "source": "/roms/gba-roms(.*)",
      "destination": "/api/redirect"
    },
    {
      "source": "/roms/3ds-roms(.*)",
      "destination": "/api/redirect"
    },
    {
      "source": "/roms/gamecube-roms(.*)",
      "destination": "/api/redirect"
    },
    {
      "source": "/((?!api/).*)",
      "destination": "/index.html"
    }
  ]
}